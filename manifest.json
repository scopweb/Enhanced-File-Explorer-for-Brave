{
    "manifest_version": 3,

    "name": "Enhanced File Explorer for Brave",

    "version": "0.1-beta",

    "description": "Enhanced File Explorer for Brave",

    "content_scripts": [{
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }],

    "background": {
      "service_worker": "background.js"
    },

    "permissions": [
      "tabs",
      "scripting"
    ],

    "host_permissions": [
      "file://*/*"
    ],

    "author": "scopweb"
}